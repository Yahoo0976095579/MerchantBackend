@model MerchantBackend.Models.DashboardViewModel

@{
    ViewData["Title"] = "後台儀表板";
}

<div class="text-center">
    <h1 class="display-4">歡迎來到商家後台管理系統！</h1>
    <p>在這裡您可以管理使用者、商品、分類、標籤和查看系統日誌。</p>
</div>

<hr class="my-4">

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-primary shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-white">@Html.DisplayNameFor(model => model.TotalUsers)</h5>
                        <h2 class="card-text">@Model.TotalUsers</h2>
                    </div>
                    <i class="bi bi-people-fill" style="font-size: 3rem;"></i> @* 可選：使用 Bootstrap Icons 或 Font Awesome *@
                </div>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                <a asp-controller="User" asp-action="Index" class="text-white text-decoration-none">查看使用者 →</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-white bg-success shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-white">@Html.DisplayNameFor(model => model.TotalProducts)</h5>
                        <h2 class="card-text">@Model.TotalProducts</h2>
                    </div>
                    <i class="bi bi-box-seam" style="font-size: 3rem;"></i> @* 可選：使用 Bootstrap Icons 或 Font Awesome *@
                </div>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                <a asp-controller="Product" asp-action="Index" class="text-white text-decoration-none">查看商品 →</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-white bg-info shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-white">@Html.DisplayNameFor(model => model.ActiveProducts)</h5>
                        <h2 class="card-text">@Model.ActiveProducts</h2>
                    </div>
                    <i class="bi bi-graph-up" style="font-size: 3rem;"></i> @* 可選：使用 Bootstrap Icons 或 Font Awesome *@
                </div>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                <a asp-controller="Product" asp-action="Index" asp-route-isActiveFilter="true" class="text-white text-decoration-none">查看上架商品 →</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-white bg-warning shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-white">@Html.DisplayNameFor(model => model.TotalCategories)</h5>
                        <h2 class="card-text">@Model.TotalCategories</h2>
                    </div>
                    <i class="bi bi-tags-fill" style="font-size: 3rem;"></i> @* 可選：使用 Bootstrap Icons 或 Font Awesome *@
                </div>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                <a asp-controller="Category" asp-action="Index" class="text-white text-decoration-none">查看分類 →</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-white bg-danger shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-white">@Html.DisplayNameFor(model => model.TotalTags)</h5>
                        <h2 class="card-text">@Model.TotalTags</h2>
                    </div>
                    <i class="bi bi-bookmark-fill" style="font-size: 3rem;"></i> @* 可選：使用 Bootstrap Icons 或 Font Awesome *@
                </div>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                <a asp-controller="Tag" asp-action="Index" class="text-white text-decoration-none">查看標籤 →</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-white bg-secondary shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-white">@Html.DisplayNameFor(model => model.TodayLogins)</h5>
                        <h2 class="card-text">@Model.TodayLogins</h2>
                    </div>
                    <i class="bi bi-graph-up-arrow" style="font-size: 3rem;"></i> @* 可選：使用 Bootstrap Icons 或 Font Awesome *@
                </div>
            </div>
            <div class="card-footer bg-transparent border-top-0">
                <a asp-controller="AuditLog" asp-action="Index" class="text-white text-decoration-none">查看日誌 →</a>
            </div>
        </div>
    </div>
</div>

@section Styles {
@* 可選：引入 Bootstrap Icons 或 Font Awesome 以顯示圖標 *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}